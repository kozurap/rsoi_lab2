@page
@model Client.Models.LoginModel
@{
    Layout = "_Layout";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="offset-2">
        <h3>Войти</h3>
        <div class="col-9">
            <form form action="" method="post">
                <div class="form-group">
                    <label for="logMail">
                        Ваша логин
                    </label>
                    <input type="text" name="Login" class="form-control" id="logMail" aria-describedby="emailHelp" placeholder="Enter login" />
                </div>
                <div class="form-group">
                    <label for="logPassword">
                        Ваш пароль
                    </label>
                    <input type="password" name="Password" class="form-control" id="logPassword" placeholder="Enter password" />
                </div>
                <div>
                    <div class="form-group">
                        <input type="submit" value="Log In" class="btn btn-primary" />
                    </div>
                </div>
            </form>
        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>

