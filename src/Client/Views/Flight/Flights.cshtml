@model Client.Models.FlightListModel
@{
    Layout = "_Layout";
}
<div class="main-grids">
    <div class="recommended">
        <div class="recommended-grids english-grid">
            <div class="recommended-info">
                <h3>Перелеты</h3>
            </div>
            <div class="container">
            <div class="row">
                    <div class="col">#</div>
                    <div class="col">Номер полета</div>
                    <div class="col">Дата</div>
                    <div class="col">Аэропорт, из</div>
                    <div class="col">Аэропорт, в</div>
                    <div class="col">Цена</div>
                    <div class="col"></div>
             </div>
                            @for(int i =0; i< Model.Flights.Count; i++)
                            {
                                <div class="row">
                        <div class="col">@i</div>
                        <div class="col">@Model.Flights[i].Flightnumber</div>
                        <div class="col">@Model.Flights[i].Datetime</div>
                        <div class="col">@Model.Flights[i].Fromairport</div>
                        <div class="col">@Model.Flights[i].Toairport</div>
                        <div class="col">@Model.Flights[i].Price</div>
                        <div class="col">
                                    <form method="Post" action="BuyTicket">
                                        <input type="hidden" name="flightNumber" value="@Model.Flights[i].Flightnumber" />
                                        <input type="hidden" name="price" value="@Model.Flights[i].Price" />
                                        <div class="form-check">
                                            <input type="checkbox" name="RememberMe" class="form-check-input" id="logRemember">
                                            <label class="form-check-label" for="logRemember">Заплатить бонусами</label>
                                        </div>
                                <input type="submit" value="Купить билет" class="btn btn-primary" disabled="@(Model.Flights[i].IsPurchasable ? null : "disabled")" />
                                    </form>
                                </div>
                    </div>
                                    
                            }
            </div>
        </div>
    </div>
</div>